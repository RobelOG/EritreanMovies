<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.og.eritreanmovies.MainActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/youtube_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button0"
                android:layout_below="@+id/youtube_view"
                android:background="@drawable/ad" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button"
                android:layout_below="@+id/button0"
                android:background="@drawable/eritreasalh" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button1"
                android:layout_below="@+id/button"
                android:background="@drawable/thestoryofjesus"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button2"
                android:layout_below="@+id/button1"
                android:background="@drawable/salhsaed"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button3"
                android:layout_below="@+id/button2"
                android:background="@drawable/whubtoyyemane"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button4"
                android:layout_below="@+id/button3"
                android:background="@drawable/haliwiley"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button5"
                android:layout_below="@+id/button4"
                android:background="@drawable/merontesfu"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button6"
                android:layout_below="@+id/button5"
                android:background="@drawable/fiqritewelidu"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button7"
                android:layout_below="@+id/button6"
                android:background="@drawable/wintaeritrean"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button8"
                android:layout_below="@+id/button7"
                android:background="@drawable/merhawimeles"
                />
            <Button
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/button9"
            android:layout_below="@+id/button8"
            android:background="@drawable/merhawimelesanemsane"
            />


            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/button10"
                android:layout_below="@+id/button9"
                android:background="@drawable/eritreatijue"
                />






        </LinearLayout>
    </ScrollView>
</RelativeLayout>

